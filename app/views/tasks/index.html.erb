<ul>
  <h1>My tasks</h1>
  <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task) %>
    <%= link_to "Delete #{task.id}",
            delete_task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" } %></li>
  <% end %>
  <br>
  <%= link_to "Create a Task", new_task_path %>
</ul>

